<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TransactionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/upBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondaryContainer"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/allTransactions"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/money_in_out"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/positiveTransactions"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/positiveTransactions"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/money_in"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/negativeTransactions" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/negativeTransactions"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/money_out"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/selectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/allTransactions"
                app:selectionRequired="true"
                app:singleSelection="true">

                <Button
                    android:id="@+id/last_month"
                    style="?attr/materialButtonOutlinedStyle"
                    android:backgroundTint="@drawable/button_color_selector"
                    android:textColor="@drawable/button_text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="month" />

                <Button
                    android:id="@+id/last_three_month"
                    style="?attr/materialButtonOutlinedStyle"
                    android:backgroundTint="@drawable/button_color_selector"
                    android:textColor="@drawable/button_text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 month" />

                <Button
                    android:id="@+id/last_year"
                    style="?attr/materialButtonOutlinedStyle"
                    android:backgroundTint="@drawable/button_color_selector"
                    android:textColor="@drawable/button_text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="year" />

                <Button
                    android:id="@+id/all_time"
                    style="?attr/materialButtonOutlinedStyle"
                    android:backgroundTint="@drawable/button_color_selector"
                    android:textColor="@drawable/button_text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="all" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <RadioGroup
                android:id="@+id/selectCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/categorySpinner"
                app:layout_constraintTop_toBottomOf="@id/selectDate">

                <RadioButton
                    android:id="@+id/all"
                    android:text="all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/custom"
                    android:text="custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:popupBackground="?attr/colorSecondaryContainer"
                android:spinnerMode="dropdown"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintStart_toEndOf="@id/selectCategory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/selectCategory"
                app:layout_constraintBottom_toBottomOf="@id/selectCategory"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dataList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/upBar"
            app:layout_constraintBottom_toTopOf="@id/navigationBar"/>

        <TextView
            android:id="@+id/no_transaction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="No transaction found"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/upBar"
            app:layout_constraintBottom_toTopOf="@id/navigationBar"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationBar"
            app:menu="@menu/bottom_navigation_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>